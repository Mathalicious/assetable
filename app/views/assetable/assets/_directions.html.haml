.uploader-directions.drop-element
  .uploader-directions-image
  .uploader-directions-copy
    = link_to "select file", "#", class: "browse-btn"
    or
    - if directions.present?
      = directions
    - else
      = link_to "add a third party service", Assetable::Engine.routes.url_helpers.new_external_service_path, class: "btn-third-party", remote: true

    / or
    / = link_to "select from gallery", Assetable::Engine.routes.url_helpers.assets_path(fieldname: fieldname, uploader_id: id), remote: true